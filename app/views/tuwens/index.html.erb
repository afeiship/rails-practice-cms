<p id="notice"><%= notice %></p>

<h1>Tuwens</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tuwens.each do |tuwen| %>
      <tr>
        <td><%= tuwen.title %></td>
        <td>
          <%= image_tag tuwen.image.thumb.url %>
        </td>
        <td><%= tuwen.content %></td>
        <td><%= link_to 'Show', tuwen %></td>
        <td><%= link_to 'Edit', edit_tuwen_path(tuwen) %></td>
        <td><%= link_to 'Destroy', tuwen, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tuwen', new_tuwen_path %>
