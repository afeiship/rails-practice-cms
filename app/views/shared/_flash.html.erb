<% flash.each do |name, msg| %>
    <% if msg.is_a? Array %>
        <div class="alert alert-<%= name %>">
            <ul>
                <% msg.each do |message| %>
                <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% else %>
        <%= content_tag :div, msg, class: "alert alert-#{name}" %>
    <% end %>
<% end %>
